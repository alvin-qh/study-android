<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    tools:context=".main.views.MainActivity">

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/ll_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_use_camera_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_use_camera_app" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_use_camera2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_use_camera2" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_use_camera_with_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_use_camera_with_service" />

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.constraint.ConstraintLayout>
