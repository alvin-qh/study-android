<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="alvin.ui.list"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".list.views.ListMainActivity"
            android:label="@string/title_list_demos"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".list.views.ListByListViewActivity"
            android:label="@string/title_list_view_demo"
            android:parentActivityName=".list.views.ListMainActivity" />

        <activity
            android:name=".list.views.ListByRecyclerViewActivity"
            android:label="@string/title_recycler_view_demo"
            android:parentActivityName=".list.views.ListMainActivity" />
    </application>

</manifest>