<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="alvin.net"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- This receiver is deprecated in Android N -->
        <!--
        <receiver android:name=".status.receivers.NetStatusBroadcastReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
            </intent-filter>
        </receiver>
        -->

        <activity
            android:name=".status.StatusMainActivity"
            android:label="@string/title_network_status"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".http.HttpMainActivity"
            android:label="@string/title_http"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".http.views.HttpTaskActivity"
            android:label="@string/title_http_async_task"
            android:parentActivityName=".http.HttpMainActivity" />

        <activity
            android:name=".http.views.HttpRxActivity"
            android:label="@string/title_http_rx_java"
            android:parentActivityName=".http.HttpMainActivity" />

        <activity
            android:name=".socket.SocketMainActivity"
            android:label="@string/title_socket"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".socket.views.SocketNativeActivity"
            android:label="@string/title_socket_native"
            android:parentActivityName=".socket.SocketMainActivity" />

        <activity
            android:name=".socket.views.SocketNettyActivity"
            android:label="@string/title_socket_netty"
            android:parentActivityName=".socket.SocketMainActivity" />

        <activity
            android:name=".remote.RemoteMainActivity"
            android:label="@string/title_remote"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".remote.views.RemoteImageActivity"
            android:label="@string/title_remote_image"
            android:parentActivityName=".remote.RemoteMainActivity" />

    </application>

</manifest>