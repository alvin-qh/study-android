<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="30dp"
    android:paddingEnd="20dp"
    android:paddingStart="20dp"
    android:paddingTop="30dp"
    android:theme="@style/AppTheme.Fragment"
    tools:background="#0e0e0e">

    <LinearLayout
        android:id="@+id/ll_activity_scope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_activity_scope" />

        <TextView
            android:id="@+id/tv_activity_scope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            tools:text="ActivityService@12345" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_fragment_scope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ll_activity_scope">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_session_service" />

        <TextView
            android:id="@+id/tv_fragment_scope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            tools:text="SessionService@12345" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
