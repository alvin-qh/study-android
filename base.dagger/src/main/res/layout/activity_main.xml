<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.views.MainActivity">

    <Button
        android:id="@+id/btn_basic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_basic"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_scope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_scope"
        app:layout_constraintTop_toBottomOf="@+id/btn_basic" />

    <Button
        android:id="@+id/btn_multibindings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_multibindings"
        app:layout_constraintTop_toBottomOf="@+id/btn_scope" />

</androidx.constraintlayout.widget.ConstraintLayout>
