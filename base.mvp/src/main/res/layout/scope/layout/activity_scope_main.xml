<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.Fragment"
    tools:context=".scope.views.ScopeMainActivity">

    <LinearLayout
        android:id="@+id/ll_singleton_server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_red"
        android:orientation="horizontal"
        android:paddingBottom="30dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_singleton_service" />

        <TextView
            android:id="@+id/tv_singleton_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            tools:text="SingletonService@12345" />
    </LinearLayout>

    <fragment
        android:id="@+id/frg_session_1"
        android:name="alvin.base.mvp.scope.views.SessionFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_singleton_server"
        tools:layout="@layout/fragment_session" />

    <fragment
        android:id="@+id/frg_session_2"
        android:name="alvin.base.mvp.scope.views.SessionFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/frg_session_1"
        tools:layout="@layout/fragment_session" />

</android.support.constraint.ConstraintLayout>