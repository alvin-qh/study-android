<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/ll_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TableRow
            style="@style/AppTheme.Multibindings.TableRow.Odd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatTextView
                style="@style/AppTheme.Multibindings.TableRow.TextView"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_multibindings_set"
                android:textAlignment="textEnd"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_name_set"
                style="@style/AppTheme.Multibindings.TableRow.TextView"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                tools:text="[&quot;Alvin&quot;, &quot;Emma&quot;]" />

        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>