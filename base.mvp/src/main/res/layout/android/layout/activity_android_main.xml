<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_subcomponent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_android_subcomponent" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_contributes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_android_contributes"
        app:layout_constraintTop_toBottomOf="@id/btn_subcomponent" />

</android.support.constraint.ConstraintLayout>
