<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="alvin.base.mvp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".basic.views.BasicMainActivity"
            android:label="@string/title_basic"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".scope.ScopeMainActivity"
            android:label="@string/title_scope"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".scope.views.DependencyActivity"
            android:label="@string/title_scope_dependence"
            android:parentActivityName=".scope.ScopeMainActivity" />

        <activity
            android:name=".scope.views.SubcomponentActivity"
            android:label="@string/title_scope_subcomponent"
            android:parentActivityName=".scope.ScopeMainActivity" />


        <activity
            android:name=".android.views.AndroidMainActivity"
            android:label="@string/title_android"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".android.views.AndroidSubcomponentActivity"
            android:label="@string/title_android_subcomponent"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".android.views.AndroidContributesActivity"
            android:label="@string/title_android_contributes"
            android:parentActivityName=".android.views.AndroidMainActivity" />

        <activity
            android:name=".multibindings.views.MultibindingsMainActivity"
            android:label="@string/title_multibindings"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.Multibindings" />

    </application>
</manifest>

